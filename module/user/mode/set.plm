package user_mode_set;

$_ = 'user_mode_set';

sub initialize {
}

sub server_open {
  local($serverno) = @_;
  local($userno, $mode);
  $userno = $'userno[$serverno];
  $mode = &'property($userno, 'mode');
  &'s_print($serverno, '', 'MODE', $'nick[$serverno], $mode) if defined($mode);
}

