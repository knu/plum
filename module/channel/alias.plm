package channel_alias;

$_ = 'channel_alias';

sub initialize {
}

sub cs_invite {
  local($clientno, @message) = @_;
  return &convert(3, @message);
}

sub cs_join {
  local($clientno, @message) = @_;
  return &convert(2, @message);
}

