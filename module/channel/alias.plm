sub convert {
  local($idx, @message) = @_;
  local(@list);
  @list = ();
  if (@message > $idx) {
    foreach $chan (split(/\,/, $message[$idx])) {
      push(@list, &'real($chan));
    }
    $message[$idx] = join(',', @list);
  }
  return @message;
}

