package ctcp_userinfo;

$_ = 'ctcp_userinfo';

sub initialize {
  $CLIENTINFO = 'USERINFO';
}

sub cpss_userinfo {
  local($serverno, $prefix, $cmd, @params) = @_;
  local($nick, $info);
  $nick = &'prefix($prefix);
  $info = &'property($'userno[$serverno], 'info');
  if ($info) {
    &'s_print($serverno, '', 'NOTICE', $nick, "\cA" . join(' ', $cmd, $info) . "\cA");
  }
  return ($prefix, $cmd, @params);
}

__END__
