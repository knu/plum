package ctcp_time;

$_ = 'ctcp_time';

sub initialize {
  $CLIENTINFO = 'TIME';
}

sub cpss_time {
  local($serverno, $prefix, $cmd, @params) = @_;
  local($nick);
  $nick = &'prefix($prefix);
  &'s_print($serverno, '', 'NOTICE', $nick, "\cA" . join(' ', $cmd, &'date('%a %b %d %H:%M:%S %Y')) . "\cA");
  return ($prefix, $cmd, @params);
}

