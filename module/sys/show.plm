package sys_show;

$_ = 'sys_show';

sub initialize {
}

sub cs_show {
  local($clientno, $prefix, $cmd, @params) = @_;
  local($exec, $result);
  $exec = join(' ', @params);
  $result = eval($exec);
  if (!defined($result)) {
    $result = 'undef';
  }
  &'c_print($clientno, '', 'NOTICE', $'nick[$clientno], $result);
  return ();
}

__END__
